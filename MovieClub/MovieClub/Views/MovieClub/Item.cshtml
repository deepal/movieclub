@model MovieClub.Models.Movie

@{
    ViewBag.Title = "Test";
    var movie = Model;
}

<h3>@movie.Name</h3>

<table>
    <tr><td colspan="2"><img src="@movie.PosterURL" alt="Image not available" /></td></tr>
    <tr><td>Genre</td><td>@movie.Genre</td></tr>
    <tr><td>Year</td><td>@movie.Year</td></tr>
    <tr><td>Language</td><td>@movie.Language</td></tr>
    <tr><td>Director</td><td>@movie.Director</td></tr>
    <tr><td>Writer</td><td>@movie.Writer</td></tr>
    <tr><td>Plot</td><td>@movie.PlotFull</td></tr>
    <tr><td>Runtime</td><td>@movie.Runtime</td></tr>
    <tr><td>Imdb Ratings</td><td>@movie.ImdbRatings (@movie.ImdbVotes votes)</td></tr>
</table>


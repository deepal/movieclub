@model MovieClub.Models.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <div class="row">
        <div class="large-40 large-centered medium-50 medium-centered small-100 columns">

            <div id="login-form">
                <h4>Login</h4>

                <div class="editor-field">
                    @Html.TextBoxFor(model => model.Username, new {@placeholder= "Username" })
                    @Html.ValidationMessageFor(model => model.Username,null, new {@style = "font-size:12px;margin-top:0;padding-top:0;" })
                </div>

                <div class="editor-field">
                    @Html.PasswordFor(model => model.Password, new { @placeholder = "Password" })
                    @Html.ValidationMessageFor(model => model.Password, null, new { @style = "font-size:12px;margin-top:0;padding-top:0;" })
                </div>

                <div class="editor-field" id="login-remember-me">
                    <ul>
                        <li>@Html.EditorFor(model => model.RememberMe)</li>
                        <li>@Html.LabelFor(model => model.RememberMe)</li>
                    </ul>
                    @Html.ValidationMessageFor(model => model.RememberMe)
                </div>

                <div id="login-buttons">
                    <p>
                        <input id="login-button" type="submit" value="Login" class="button tiny" />
                    </p>
                </div>
            </div>
        </div>
    </div>
}

@section customstyles{
    @Styles.Render("~/Content/css/login.css")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

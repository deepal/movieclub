@model List<MovieClub.Models.AdminModels.ReservedMovieModel>

@if (Model.Count != 0)
{
    foreach (var item in Model)
    {
        <tr>
            <td>
                <a href="/Content/MovieDetails/@item.MovieId">@item.MovieName</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationsCount)
            </td>
            <td>
                <a href="/Admin/UserDetails/@item.UserId">@item.Username</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateReserved)
            </td>
            <td>
                <a href="#" onclick="issueMovie(@item.MovieId,@item.UserId)" class="issuemovie">Issue</a>
            </td>
        </tr>
    }
}
else{
    <tr>
        <td colspan="5" style="padding:10px;text-align:center">No reservations</td>
    </tr>   
}